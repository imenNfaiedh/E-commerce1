@model List<E_commerce1.Models.Domain.Produit>
@{
}

<h1>Produits</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom Produit</th>
            <th> Prix en DT</th>
            <th>Réference </th>
            <th>Description </th>
            <th></th>

        </tr>
    </thead>

    <tbody>
        <!--
            crée une ligne de tableau HTML.
            La ligne de tableau contient les 
            informations suivantes sur le produit :
        -->
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.idProduit</td>
                <td>@produit.nomProduit</td>
                <td>@produit.prix</td>
                <td>@produit.reference</td>
                <td>@produit.description</td>

                <td> <a href="Produit/View/@produit.idProduit">Modifier</a></td>
                


            </tr>
        }
    </tbody>


</table>
